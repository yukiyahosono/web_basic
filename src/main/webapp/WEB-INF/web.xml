<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <servlet>

        <servlet-name>HelloServletMapping</servlet-name>

        <servlet-class>web_basic.HelloServlet</servlet-class>

    </servlet>

    <servlet-mapping>

        <servlet-name>HelloServletMapping</servlet-name>

        <url-pattern>/HelloServlet</url-pattern>

    </servlet-mapping>
    
    <servlet>
	<servlet-name>UseForwardServletMapping</servlet-name>
	<servlet-class>web_basic.UseForwardServlet</servlet-class>
	</servlet> 
	
	<servlet-mapping>
	<servlet-name>UseForwardServletMapping</servlet-name>
	<url-pattern>/UseForwardServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>UseRequestServletMapping</servlet-name>
	<servlet-class>web_basic.UseRequestServlet</servlet-class>
	</servlet> 
	<servlet-mapping>
	<servlet-name>UseRequestServletMapping</servlet-name>
	<url-pattern>/UseRequestServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>plus</servlet-name>
	<servlet-class>web_basic.plus</servlet-class>
	</servlet> 
	<servlet-mapping>
	<servlet-name>plusMapping</servlet-name>
	<url-pattern>/plus</url-pattern>
	</servlet-mapping>

</web-app>
